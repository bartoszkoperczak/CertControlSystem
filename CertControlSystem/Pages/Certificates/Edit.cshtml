@page
@model CertControlSystem.Pages.Certificates.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Certificates/";
}

<h1>Edit</h1>

<h4>Certificate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Certificate.Id" />
            <div class="form-group">
                <label asp-for="Certificate.ClientId" class="control-label"></label>
                <select asp-for="Certificate.ClientId" class="form-control" asp-items="ViewBag.ClientId" ></select>
                <span asp-validation-for="Certificate.ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Certificate.TypeId" class="control-label"></label>
                <select asp-for="Certificate.TypeId" class="form-control" asp-items="ViewBag.TypeId" ></select>
                <span asp-validation-for="Certificate.TypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Certificate.IssueDate" class="control-label"></label>
                <input asp-for="Certificate.IssueDate" class="form-control" />
                <span asp-validation-for="Certificate.IssueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Certificate.ExpirationDate" class="control-label"></label>
                <input asp-for="Certificate.ExpirationDate" class="form-control" />
                <span asp-validation-for="Certificate.ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Certificate.IsActive" /> @Html.DisplayNameFor(model => model.Certificate.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
