@page
@model CertControlSystem.Pages.NotificationLogs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NotificationLog[0].Channel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationLog[0].SentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationLog[0].MessageContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationLog[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationLog[0].Certificate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.NotificationLog) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Channel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MessageContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Certificate.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
