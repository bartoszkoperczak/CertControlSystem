@model CertControlSystem.Models.CertificateType

@{
    ViewData["Title"] = "Usuń Typ";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card card-modern shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-trash-fill me-2"></i>Usuń Typ Certyfikatu</h4>
            </div>
            <div class="card-body p-4 text-center">

                <h5 class="text-danger mb-4">Czy na pewno chcesz usunąć ten typ?</h5>

                <div class="bg-light rounded p-4 mb-4 d-inline-block border">
                    <h2 class="fw-bold text-dark mb-0">@Model.Name</h2>
                    <span class="badge bg-secondary mt-2">Domyślnie: @Model.DefaultValidityMonths mies.</span>
                </div>

                <div class="alert alert-warning text-start">
                    <small>
                        <i class="bi bi-exclamation-triangle-fill me-1"></i>
                        <strong>Ostrzeżenie:</strong> Jeśli istnieją certyfikaty przypisane do tego typu, operacja może się nie udać lub usunąć powiązane dane (zależnie od konfiguracji bazy).
                    </small>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-center gap-2 mt-2">
                        <a asp-action="Index" class="btn btn-light px-4">Anuluj</a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-x-circle me-1"></i> Usuń Typ
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>