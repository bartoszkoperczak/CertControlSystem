@model CertControlSystem.Models.Certificate

@{
    ViewData["Title"] = "Nowy Certyfikat";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-modern shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Dodaj Nowy Certyfikat</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="ClientId" class="form-label fw-bold">Klient</label>
                            <select asp-for="ClientId" class="form-select" asp-items="ViewBag.ClientId">
                                <option value="">-- Wybierz klienta --</option>
                            </select>
                            <span asp-validation-for="ClientId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="TypeId" class="form-label fw-bold">Typ Certyfikatu</label>
                            <select asp-for="TypeId" id="TypeIdSelect" class="form-select" asp-items="ViewBag.TypeId">
                                <option value="">-- Wybierz typ --</option>
                            </select>
                            <span asp-validation-for="TypeId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="IssueDate" class="form-label fw-bold">Data Wystawienia</label>
                            <input asp-for="IssueDate" id="IssueDateInput" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="IssueDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ExpirationDate" class="form-label fw-bold">Data Ważności (Obliczana automatycznie)</label>
                            <input asp-for="ExpirationDate" id="ExpirationDateInput" class="form-control bg-light" type="date" readonly />
                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                            <small class="text-muted">Zmienia się w zależności od typu i daty wystawienia.</small>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <a asp-action="Index" class="btn btn-light me-2">Anuluj</a>
                        <input type="submit" value="Zapisz Certyfikat" class="btn btn-primary px-4" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // 1. Pobieramy słownik ważności z C# do JavaScriptu (zamieniamy na JSON)
        var typeValidities = @Html.Raw(System.Text.Json.JsonSerializer.Serialize((Dictionary<int, int>)ViewBag.TypeValidities));

        // 2. Elementy DOM
        var typeSelect = document.getElementById("TypeIdSelect");
        var issueInput = document.getElementById("IssueDateInput");
        var expirationInput = document.getElementById("ExpirationDateInput");

        // 3. Funkcja licząca datę
        function updateExpirationDate() {
            var selectedTypeId = typeSelect.value;
            var issueDateVal = issueInput.value;

            // Sprawdzamy czy użytkownik wybrał Typ i Datę
            if (selectedTypeId && issueDateVal && typeValidities[selectedTypeId]) {
                var monthsToAdd = typeValidities[selectedTypeId];

                var date = new Date(issueDateVal);
                // Dodajemy miesiące
                date.setMonth(date.getMonth() + monthsToAdd);

                // Formatowanie na YYYY-MM-DD
                var day = ("0" + date.getDate()).slice(-2);
                var month = ("0" + (date.getMonth() + 1)).slice(-2);
                var year = date.getFullYear();

                expirationInput.value = `${year}-${month}-${day}`;
            }
        }

        // 4. Podpinamy nasłuchiwanie zdarzeń
        typeSelect.addEventListener("change", updateExpirationDate);
        issueInput.addEventListener("change", updateExpirationDate);

        // Wywołaj raz na starcie (gdyby coś było wybrane domyślnie)
        updateExpirationDate();
    </script>
}