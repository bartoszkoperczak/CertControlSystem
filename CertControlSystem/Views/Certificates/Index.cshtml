@using Microsoft.AspNetCore.Identity
@model IEnumerable<CertControlSystem.Models.Certificate>
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Panel Certyfikatów";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 text-gray-800">Certyfikaty</h1>
        <p class="text-muted small">Zarządzaj ważnością uprawnień swoich klientów.</p>
    </div>

    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg me-2"></i>Dodaj Certyfikat
        </a>
    }
</div>

<div class="card card-modern p-0 overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Klient</th>
                    <th>Typ Uprawnień</th>
                    <th>Wystawiono</th>
                    <th>Wygasa</th>
                    <th>Status</th>
                    <th class="text-end pe-4">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    /* Logika kolorów dla daty wygaśnięcia */
                    var daysLeft = (item.ExpirationDate.ToDateTime(TimeOnly.MinValue) - DateTime.Now).TotalDays;
                    var rowClass = "";
                    if (item.IsActive && daysLeft < 30 && daysLeft > 0) { rowClass = "table-warning"; } // Żółty jak wygasa niedługo

                    <tr class="@rowClass">
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div class="avatar bg-light text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                                <div>
                                    <div class="fw-bold text-dark">@item.Client.FirstName @item.Client.LastName</div>
                                    <div class="small text-muted">@item.Client.Email</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="fw-semibold text-primary">@item.Type.Name</span>
                        </td>
                        <td>
                            @item.IssueDate.ToString("dd.MM.yyyy")
                        </td>
                        <td>
                            @if (daysLeft < 0)
                            {
                                <span class="text-danger fw-bold">@item.ExpirationDate.ToString("dd.MM.yyyy")</span>
                                <br />

                                <small class="text-danger">(Wygasł)</small>
                            }
                            else
                            {
                                <span>@item.ExpirationDate.ToString("dd.MM.yyyy")</span>
                            }
                        </td>
                        <td>
                            @{
                                bool isReallyActive = item.ExpirationDate >= DateOnly.FromDateTime(DateTime.Now);
                            }

                            @if (isReallyActive)
                            {
                                <span class="badge bg-success badge-status"><i class="bi bi-check-circle me-1"></i> Aktywny</span>
                            }
                            else
                            {
                                <span class="badge bg-danger badge-status"><i class="bi bi-x-circle me-1"></i> Nieaktywny</span>
                            }
                        </td>
                        <td class="text-end pe-4">
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light btn-icon text-primary" title="Szczegóły">
                                    <i class="bi bi-eye"></i>
                                </a>
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light btn-icon text-warning" title="Edytuj">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-light btn-icon text-danger" title="Usuń">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <div class="text-muted mb-3"><i class="bi bi-inbox fs-1"></i></div>
        <h5 class="text-muted">Brak certyfikatów w bazie</h5>
        @if (SignInManager.IsSignedIn(User))
        {
            <p>Kliknij przycisk "Dodaj Certyfikat" powyżej.</p>
        }
    </div>
}