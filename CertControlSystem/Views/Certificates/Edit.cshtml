@model CertControlSystem.Models.Certificate

@{
    ViewData["Title"] = "Edycja Certyfikatu";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-modern shadow-sm border-warning">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edytuj Certyfikat</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="ClientId" class="form-label fw-bold">Klient</label>
                            <select asp-for="ClientId" class="form-select" asp-items="ViewBag.ClientId"></select>
                            <span asp-validation-for="ClientId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="TypeId" class="form-label fw-bold">Typ Certyfikatu</label>
                            <select asp-for="TypeId" class="form-select" asp-items="ViewBag.TypeId"></select>
                            <span asp-validation-for="TypeId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="IssueDate" class="form-label fw-bold">Data Wystawienia</label>
                            <input asp-for="IssueDate" class="form-control" type="date" />
                            <span asp-validation-for="IssueDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ExpirationDate" class="form-label fw-bold">Data Ważności</label>
                            <input asp-for="ExpirationDate" class="form-control" type="date" />
                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <a asp-action="Index" class="btn btn-light me-2">Anuluj</a>
                        <input type="submit" value="Zapisz Zmiany" class="btn btn-warning px-4" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}