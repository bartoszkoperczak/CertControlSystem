@using Microsoft.AspNetCore.Identity
@model CertControlSystem.Models.Client
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Profil Klienta";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-modern shadow-sm overflow-hidden mb-4">
            <div class="bg-primary h-100px" style="height: 100px;"></div>

            <div class="card-body position-relative pt-0">
                <div class="avatar bg-white p-1 rounded-circle shadow position-absolute start-50 translate-middle-x" style="top: -50px; width: 100px; height: 100px;">
                    <div class="bg-light text-primary w-100 h-100 rounded-circle d-flex align-items-center justify-content-center display-4 fw-bold">
                        @Model.FirstName.Substring(0, 1)@Model.LastName.Substring(0, 1)
                    </div>
                </div>

                <div class="text-center mt-5 pt-2">
                    <h2 class="fw-bold mb-0">@Model.FirstName @Model.LastName</h2>
                    <p class="text-muted mb-4">Klient od: @Model.CreatedAt.ToString("dd.MM.yyyy")</p>

                    <div class="d-flex justify-content-center gap-4 mb-4">
                        <div class="text-center">
                            <div class="bg-light rounded-circle p-3 mb-2 mx-auto" style="width: 50px; height: 50px;">
                                <i class="bi bi-envelope text-primary fs-5"></i>
                            </div>
                            <small class="d-block fw-bold text-dark">Email</small>
                            <span class="text-muted small">@Model.Email</span>
                        </div>
                        <div class="text-center">
                            <div class="bg-light rounded-circle p-3 mb-2 mx-auto" style="width: 50px; height: 50px;">
                                <i class="bi bi-telephone text-primary fs-5"></i>
                            </div>
                            <small class="d-block fw-bold text-dark">Telefon</small>
                            <span class="text-muted small">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "-" : Model.PhoneNumber)</span>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-light"><i class="bi bi-arrow-left me-1"></i> Wróć do listy</a>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil me-1"></i> Edytuj dane</a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                        </div>
                    }
                </div>
            </div>
        </div>

        @if (Model.Certificates != null && Model.Certificates.Any())
        {
            <div class="card card-modern shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Posiadane Certyfikaty</h5>
                </div>
                <div class="list-group list-group-flush">
                    @foreach (var cert in Model.Certificates)
                    {
                        <a asp-controller="Certificates" asp-action="Details" asp-route-id="@cert.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <span class="fw-bold">Certyfikat #@cert.Id</span>
                                <div class="small text-muted">Ważny do: @cert.ExpirationDate.ToString("dd.MM.yyyy")</div>
                            </div>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>