@model CertControlSystem.Models.Client

@{
    ViewData["Title"] = "Usuń Klienta";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card card-modern shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Potwierdź usunięcie</h4>
            </div>
            <div class="card-body p-4 text-center">

                <h5 class="card-title text-danger mb-4">Czy na pewno chcesz usunąć tego klienta?</h5>

                <div class="avatar bg-danger bg-opacity-10 text-danger rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px; font-size: 2rem;">
                    @Model.FirstName.Substring(0, 1)@Model.LastName.Substring(0, 1)
                </div>

                <h3 class="fw-bold">@Model.FirstName @Model.LastName</h3>
                <p class="text-muted mb-4">@Model.Email</p>

                <div class="alert alert-warning text-start">
                    <small>
                        <i class="bi bi-exclamation-circle me-1"></i>
                        <strong>Uwaga:</strong> Usunięcie klienta spowoduje również usunięcie wszystkich przypisanych do niego certyfikatów z bazy danych. Tej operacji nie można cofnąć.
                    </small>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-center gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-light px-4">Anuluj</a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash-fill me-1"></i> Usuń definitywnie
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>